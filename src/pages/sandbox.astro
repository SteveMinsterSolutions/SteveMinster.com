---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const experiments = [
  {
    title: 'EV Road Trip Tracker',
    date: 'February 2026',
    status: 'Live',
    description: 'A mobile-first, location-aware trip companion for our family road trip from Mt. Juliet to Macedonia. Passcode-gated, with real-time GPS tracking, charging stop details, food options, and Google Maps navigation.',
    tags: ['Astro', 'Geolocation API', 'Mobile-First', 'EV Charging'],
    link: '/roadtrip',
  },
  {
    title: 'Building This Site',
    date: 'February 2026',
    status: 'In Progress',
    description: 'Scaffolding a personal portfolio with Astro + Tailwind CSS, deployed via Vercel. Learning modern static site generation, component architecture, and utility-first CSS.',
    tags: ['Astro', 'Tailwind', 'Vercel'],
  },
];
---

<BaseLayout title="Sandbox — Steve Minster">
  <Header />

  <!-- Page Header -->
  <section class="section-dark pt-32 pb-16">
    <div class="max-w-wide mx-auto px-6">
      <p class="font-display text-label uppercase tracking-widest text-lime mb-3">Sandbox</p>
      <h1 class="font-display text-hero text-white mb-4">
        The workshop.
      </h1>
      <p class="text-gray-300 text-lg max-w-2xl">
        Experiments, prototypes, and things I'm learning. Some will be polished. 
        Some will be held together with duct tape. That's the point.
      </p>
    </div>
  </section>

  <!-- Experiments -->
  <section class="section-light py-16">
    <div class="max-w-wide mx-auto px-6">
      {experiments.length > 0 ? (
        <div class="space-y-6">
          {experiments.map((experiment) => (
            <div class="card reveal">
              <div class="h-1 bg-gradient-to-r from-coral to-lime"></div>
              <div class="p-6 md:p-8">
                <div class="flex flex-wrap items-center gap-3 mb-3">
                  <span class="text-small text-slate-light font-display">{experiment.date}</span>
                  <span class="inline-block px-2 py-0.5 text-xs font-display uppercase tracking-wider bg-lime/10 text-lime-dark rounded-full">
                    {experiment.status}
                  </span>
                </div>
                <h3 class="font-display font-bold text-h2 text-navy mb-3">{experiment.title}</h3>
                <p class="text-slate text-body mb-4 max-w-2xl">{experiment.description}</p>
                <div class="flex flex-wrap gap-2">
                  {experiment.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
                {experiment.link && (
                  <a href={experiment.link} class="btn-primary mt-4 text-sm">View Project →</a>
                )}
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-24">
          <p class="text-slate text-lg">Experiments incoming. Check back soon.</p>
        </div>
      )}
    </div>
  </section>

  <Footer />
</BaseLayout>
